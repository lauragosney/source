<!DOCTYPE html>
<html>
  <head>
    <title>Source</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://js.stripe.com/v3/"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash[:success].present? %>
      <div class="success">
        <%= flash[:success] %>
      </div>
    <% end %>

    <% if flash[:error].present? %>
      <div class="error">
        <%= flash[:error] %>
      </div>
    <% end %>

    <header>

        <h1><%= link_to  "Source", root_path, class: "logo"%></h1>
        <nav>

          <% if is_logged_in? %>
            Signed in as: <%= @current_user.username  %>
            <%= link_to "All photos", items_path, class: "nav-links" %>
            <%= link_to "Categories", categories_path, class: "nav-links" %>
            <%= link_to "Account", edit_account_path, class: "nav-links" %>
            <%= link_to "Log out", session_path, method: :delete, class: "button-outline"  %>
          <% else %>
            <%= link_to "Sign up", new_user_path, class: "button" %>
            <%= link_to "Log in", new_session_path, class: "button-outline" %>
          <% end %>

        </nav>
    </header>

    <%= yield %>
  </body>
</html>
